{% doc %}
  @prompt
    Rich text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-richtext-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-richtext-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-richtext-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
  }

  .ai-richtext-content-{{ ai_gen_id }} h1,
  .ai-richtext-content-{{ ai_gen_id }} h2,
  .ai-richtext-content-{{ ai_gen_id }} h3,
  .ai-richtext-content-{{ ai_gen_id }} h4,
  .ai-richtext-content-{{ ai_gen_id }} h5,
  .ai-richtext-content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin-top: 0;
    margin-bottom: 16px;
  }

  .ai-richtext-content-{{ ai_gen_id }} p {
    margin-top: 0;
    margin-bottom: 16px;
  }

  .ai-richtext-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-richtext-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-richtext-content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-richtext-content-{{ ai_gen_id }} ul,
  .ai-richtext-content-{{ ai_gen_id }} ol {
    margin-top: 0;
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .ai-richtext-content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-richtext-content-{{ ai_gen_id }} blockquote {
    margin: 0 0 16px;
    padding-left: 20px;
    border-left: 4px solid {{ block.settings.heading_color }};
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-richtext-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_width_percent }}%;
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-richtext-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-richtext-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<ai-richtext-{{ ai_gen_id }} class="ai-richtext-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-richtext-container-{{ ai_gen_id }}">
    {% if block.settings.content != blank %}
      <div class="ai-richtext-content-{{ ai_gen_id }}">
        {{ block.settings.content }}
      </div>
    {% else %}
      <div class="ai-richtext-content-{{ ai_gen_id }}">
        <p>Add your rich text content here. You can include headings, paragraphs, lists, and links.</p>
      </div>
    {% endif %}
  </div>
</ai-richtext-{{ ai_gen_id }}>

<script>
  (function() {
    class AiRichtext{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('ai-richtext-{{ ai_gen_id }}', AiRichtext{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Rich text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "mobile_width_percent",
      "label": "Mobile width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum content width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.6
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Headings",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Links",
      "default": "#00b0b0"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Links hover",
      "default": "#008080"
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
